<%= form_for @marker, :html => { :class => "form-horizontal" } do |f| %>

  <%= render 'shared/error_messages', :object => f.object  %>

  <fieldset>
  <legend>Create/Edit Marker</legend>
    <div class="control-group">
    <%= f.label :first, "First Name(s)", class: "control-label" %>
    <div class="controls">
    <%= f.text_field :first %>
    </div>
    </div>
    <div class="control-group">
    <%= f.label :last, "Last Name", class: "control-label" %>
    <div class="controls">
    <%= f.text_field :last %>
    </div>
    </div>
    <div class="control-group">
    <%= f.label :email, "Email", class: "control-label" %>
    <div class="controls">
    <%= f.text_field :email %>
    </div>
    </div>
    <div class="control-group">
    <%= f.label :abbr, "Abbreviation", class: "control-label" %>
    <div class="controls">
    <%= f.text_field :abbr %>
    </div>
    </div>

    <div class="control-group">
    <%= f.label :admin, "Administrator?", class: "control-label" %>
    <div class="controls">
    <%= f.check_box :admin %>
    </div>
    </div>
    <div class="control-group">
    <%= f.label :password, "Password", class: "control-label" %>
    <div class="controls">
    <%= f.password_field :password %>
    </div>
    </div>
    <div class="control-group">
    <%= f.label :password_confirmation, "Password Confirmation", class: "control-label" %>
    <div class="controls">
    <%= f.password_field :password_confirmation %>
    </div>
    </div>

    <%= f.hidden_field :scaling, value: 1.0 %>

    <%= f.hidden_field :shift, value: 0.0 %>

    <div class="form-actions">
    <%= f.submit class: "btn btn-primary btn-xs"%>
    </div>
</fieldset>
<% end %>
