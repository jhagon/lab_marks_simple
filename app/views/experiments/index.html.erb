<h1>Experiments</h1>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
  </tr>
  <% for experiment in @experiments %>
    <tr>
      <td><%= experiment.title %></td>
      <td><%= experiment.description %></td>
      <td><%= link_to "Show", experiment,
              :class => "btn btn-success btn-xs"%></td>
      <td><%= link_to "Edit", edit_experiment_path(experiment),
              :class => "btn btn-warning btn-xs"%></td>
      <td><%= link_to "Destroy", experiment, 
              :confirm => 'Are you sure?', 
              :method => :delete,
              :class => "btn btn-danger btn-xs"%></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Experiment", new_experiment_path,
       :class => 'btn btn-primary btn-xs' %></p>
